{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build complete'",
    "vercel-build": "echo 'Vercel build complete'",
    "deploy": "vercel --prod",
    "seed:demo": "node scripts/seedDemoUsers.js",
    "cleanup:demo": "node scripts/cleanupDemoUsers.js",
    "seed:run": "node scripts/runSeed.js",
    "fix:demo": "node scripts/fixDemoPasswords.js",
    "reset:demo": "node scripts/cleanupAndReseed.js",
    "test:demo": "node scripts/testDemoLogin.js",
    "fix:all": "node scripts/fixAllDemoPasswords.js",
    "test:admin": "node scripts/testAdminEndpoints.js",
    "update:covers": "node scripts/updateBookCovers.js",
    "migrate:location-privacy": "node scripts/migrateLocationPrivacy.js",
    "init:gamification": "node scripts/initializeGamification.js",
    "setup:broadcasts": "node scripts/setupBroadcasts.js",
    "redis:start": "redis-server",
    "redis:flush": "redis-cli flushall",
    "cache:warm": "node scripts/warmCache.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=tests/integration --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=tests/unit --detectOpenHandles --forceExit",
    "jobs:dev": "nodemon workers/jobProcessor.js",
    "jobs:start": "node workers/jobProcessor.js",
    "migrate:rbac": "node scripts/migrateRBAC.js",
    "test:rbac": "node scripts/testRBAC.js",
    "remove:rbac": "node scripts/removeRBAC.js",
    "test:swagger": "node scripts/testSwagger.js",
    "test:swagger-csp": "node scripts/testSwaggerCSP.js",
    "test:borrow-notifications": "node scripts/testBorrowNotifications.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.4.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "razorpay": "^2.9.6",
    "redis": "^4.7.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "services/**/*.js",
      "models/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testTimeout": 30000
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
