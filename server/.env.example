# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# Redis Configuration (Redis Cloud)
REDIS_URL=redis://default:<password>@<host>:<port>
REDIS_PASSWORD=<your_redis_password>
REDIS_DB=0
REDIS_TTL_DEFAULT=3600
REDIS_TTL_SESSION=604800
REDIS_TTL_SEARCH=3600
REDIS_TTL_GEO=1800

# JWT Authentication
JWT_SECRET=<your_jwt_secret_key>
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=<your_cloud_name>
CLOUDINARY_API_KEY=<your_api_key>
CLOUDINARY_API_SECRET=<your_api_secret>

# Nodemailer (for Email Reminders)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=<your_email>
EMAIL_PASS=<your_email_password_or_app_password>
EMAIL_FROM="BookHive" <<your_email>>

# Google OAuth Credentials
GOOGLE_CLIENT_ID=<your_google_client_id>
GOOGLE_CLIENT_SECRET=<your_google_client_secret>

# Admin Configuration (IMPORTANT: Set your email for admin access)
SUPER_ADMIN_EMAIL=<your_admin_email>
# Optional: You can also set a specific user ID
# SUPER_ADMIN_ID=your-user-id-here

# Razorpay Payment Gateway (for Verification Badge)
RAZORPAY_KEY_ID=<add_the_key>
RAZORPAY_KEY_SECRET=<add_the_secret>